<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/post_imgView"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:layout_marginTop="4px"
        android:src="@drawable/ic_launcher"></ImageView>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/post_nameView"
        android:layout_toRightOf="@+id/post_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="35px" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="10px"
        android:id="@+id/post_tagLineView"
        android:layout_below="@+id/post_nameView"
        android:layout_toRightOf="@+id/post_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag line"
        android:textSize="30px"
        />


</RelativeLayout>



